<table class="table table-stripped table-hovered table-bordered">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Role</th>
		<th></th>
	</tr>

	<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= user.role.try(:name) %></td>
			<td><%= link_to 'Show', user_path(user) %></td>
		</tr>
	<% end %>
</table>